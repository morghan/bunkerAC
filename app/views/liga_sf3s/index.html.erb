<article class="fighters">
<h2>Street Fighter 3rd Strike</h2>
<div class="line"></div>

<div class="contenido">
  <div class="head">
    <h4 style="text-align:center">Now, Fight A New Rival!</h4>
  </div>
  <br />
  <img id="fig" src="images/logos/sf3.png" width="300" height="150"  alt="ups"/>

<!--Mini Menu-->
  
  <div class="op">
    <h3>Menu</h3>
      <% if user_signed_in? %>
      <%if getUsuarioActual==nil%>
      <p>Llena tus datos en el perfil para inscribirte en esta liga</p>
      <%else%>
      <%if LigaSf3.where(:id_cuenta=>getUsuarioActual.id_cuenta).size!=0%>
      <p><a href= "<%=edit_liga_sf3_path(LigaSf3.where(:id_cuenta=>getUsuarioActual.id_cuenta)[0]);%>" >Cambiar Personaje</a></p>
      <%else%>
      <p><a href= "<%=new_liga_sf3_path%>" >Inscribirse</a></p>
      <%end%>
      <%end%>
      <%else%>
      <p>Logeate Primero</p>
      <%end%>
  </div>  
  <br />
<!-- fin del menu -->

  <%i=0%>
  <% @liga_sf3s.sort_by { |f| [-f.puntos] }.each do |liga_sf3| %>
  <div class="fila">
    <article class="subA">
      
        <p id="idt"><%= link_to liga_sf3.id_cuenta, Perfil.where(:id_cuenta=>liga_sf3.id_cuenta)[0] %></p> 
        <img id="avt" src="<%= Perfil.where(:id_cuenta=>liga_sf3.id_cuenta)[0].foto %>" height="70" width="70" alt="ups"    align="top"/> <br />
	<table class="stat">
	  <tr>
 	    <td><ul>
	      <li id="pos">Posici&oacute;n:  <%=i+=1%></li>
	      <li id="rnk">Rank:  <%= getRank(liga_sf3.puntos) %></li>
	      <li id="pts">Puntos:  <%= liga_sf3.puntos %></li>
            </ul></td>
	    <td>
	      <p id="chtr">Personaje<p> 
              <img id="avt2" src="<%= PersonajeSf3.where(:nombre=>liga_sf3.personaje_principal)[0].path %>" alt="ups"/>  
	    </td>
	  </tr>
	</table>    
    </article>
  </div>
<% end %>
</div>
</article>
